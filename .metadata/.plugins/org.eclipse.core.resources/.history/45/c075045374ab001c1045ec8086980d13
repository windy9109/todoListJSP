	//만약 #text에 데이터가 없다면 경고
	$('#sendClick').on('click', function() {
		str = $('#text').val().trim().length;
		if( str == 0){
			alert("입력값이 존재하지 않습니다. \n 다시 입력해주세요.");	
		}
	});
	
	
	//추가성공: TodoList에 등록되었습니다!
	
})


