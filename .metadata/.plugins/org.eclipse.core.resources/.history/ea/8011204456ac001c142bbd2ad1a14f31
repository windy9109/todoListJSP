<script src="../js/jquery-3.6.0.min.js"></script>
<script>
$(function() {
	
	$('#btn1').on('click', function() {
		$('#result1 li:first').css('background','yellow');
		//전체에서 첫번째것
		$('#result1 li:first-child').css('border','3px solid red');
		//각 부모그룹에서 첫번째것
	})
	
	$('#btn2').on('click', function() {
		$('td:first-child').css('background','#9EF048');
		$('td:nth-child(1)').css('background','#9EF048');
		
		$('td:nth-child(2)').css('background','#E6749D');
		
		//$('td:last-child').css('background','#FFE146');
		//or
		$('td:nth-child(3)').css('background','#FFE146');
		
		
		//테이블이 하나일경우
		//$('tr:first').css('background','#dddddd');
		//각각의 테이블마다 첫번째줄을 모두 선택할경우
		//첫번째줄에 있는 td
		$('tr:first-child td').css({'background':'#666',
								'color':'white',
								'font-size':'2.0em'
									});
		
	})
	
})


</script>


<style>
table{
border: 1px solid blue;

}
td{
width: 250px;
height: 70px;
border: 1px solid blue;
text-align: center;
}
</style>

